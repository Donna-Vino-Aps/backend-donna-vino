{
  "name": "donna-vino-aps",
  "version": "1.0.0",
  "description": "Backend for Donna Vino Aps",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "setup": "npm install",
    "start": "node ./server",
    "dev": "nodemon ./server",
    "code-style-check": "npm run prettier && npm run lint",
    "pre-commit": "npm run code-style-check",
    "autofix": "npm run lint:fix && npm run prettier:fix",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "prettier": "prettier ./ --check",
    "prettier:fix": "prettier ./ --write",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Donna-Vino-Aps/backend-donna-vino.git"
  },
  "author": "RDL",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Donna-Vino-Aps/backend-donna-vino.git/issues"
  },
  "homepage": "https://github.com/Lenindelrionicaragua/ZenTimerAppServer#readme",
  "devDependencies": {
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^9.1.7",
    "mongodb-memory-server": "^10.1.3",
    "nock": "^13.5.4",
    "nodemon": "^3.1.7",
    "prettier": "^2.4.1",
    "prettier-eslint": "^13.0.0",
    "supertest": "^6.1.6",
    "vitest": "^3.0.6"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^7.5.0",
    "google-auth-library": "^9.10.0",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^6.13.8",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.2",
    "resend": "^4.1.2",
    "semver": "^7.6.3",
    "uuid": "^9.0.1",
    "validator": "^13.12.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
